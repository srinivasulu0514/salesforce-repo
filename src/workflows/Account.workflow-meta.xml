<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>While_country_equals_to_India_send_notifications_to_respective_customers</fullName>
        <ccEmails>srinivasuludammu05@gmail.com</ccEmails>
        <description>While country equals to &quot;India&quot;, send notifications to respective customers</description>
        <protected>false</protected>
        <recipients>
            <recipient>ds@opseraltim.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <rules>
        <fullName>Country</fullName>
        <actions>
            <name>While_country_equals_to_India_send_notifications_to_respective_customers</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Account.BillingCountry</field>
            <operation>equals</operation>
            <value>India</value>
        </criteriaItems>
        <description>The Country has to be &quot;India&quot;</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
